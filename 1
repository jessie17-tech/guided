def petakBomNikTe(baris, kolom, angkaBom, kataBom):
    for i in range(1, baris * kolom + 1):
        if i % kolom == 0 and i != 1:
            print("")
        if i % angkaBom == 0 or i // 10 == angkaBom or i % 10 == angkaBom:
            print(kataBom, end=" - ")
        elif i % 100 == angkaBom:
            print(kataBom, end=" - ")
        else:
            print(i, end=" - ")
        elif i % kolom == 0:
            if i % angkaBom == 0 or i // 10 == angkaBom or i % 10 == angkaBom:
                print(kataBom, end=" ")
            elif i % 100 == angkaBom:
                print(kataBom, end=" ")
            else:
                print(i, end=" ")
        else:
            if i % angkaBom == 0 or i // 10 == angkaBom or i % 10 == angkaBom:
                print(kataBom, end=" - ")
            elif i % 100 == angkaBom:
                print(kataBom, end=" - ")
            else:
                print(i, end=" - ")
