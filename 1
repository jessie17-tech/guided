angka = [1, 2, 3, 5, 6, 7, 8, 9]
angka_reverse = reversed(angka) # 1
# angka.sort(reverse=True) # 2
angka_reverse3 = angka[::-1]
for i in angka_reverse3:
  print(i, end=" ")

